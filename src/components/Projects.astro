---
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Laravel from "./icons/Laravel.astro";
import React from "./icons/React.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Cshap from "./icons/Cshap.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  LARAVEL: {
    name: "Laravel",
    class: "bg-[#003159] text-white",
    icon: Laravel,
  },
  REACT: {
    name: "react",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  CSHARP: {
    name: "C#",
    class: "bg-black text-white",
    icon: Cshap,
  },
  
};
const PROJECTS = [
  {
    title: "SISTEMA DE VENTAS E INSCRIPCIONES",
    description:
      "Sistema de gestión de venta con acceso restringido módulos de gestión y registro de productos gastos, ingresos y egresos.",
    link: "https://gym-admin.todo-soft.net/auth/login/",
    image: "/projects/ventas.webp",
    tags: [TAGS.CSHARP, TAGS.LARAVEL],
  },
  {
    title: "COMISIONES - GRUPO SION",
    description:
      "Plataforma acceso para usuarios comisionistas. para observar y hacer seguimiento de sus cuentas estado ganancias y promociones.",
    image: "/projects/gruposion.webp",
    tags: [TAGS.CSHARP, TAGS.REACT],
  },
  {
    title: "PRECISION WALL",
    description:
      "Sistema web de gestión para constructora con acceso restringido, con función de gestión de tickets ordenes trabajos y recurso de imágenes.",
    //link: "https://adventjs.dev",
    image: "/projects/precisionwall.webp",
    tags: [TAGS.LARAVEL],
  },
  {
    title: "APLICACION DE TEST",
    description:
      "Plataforma para para creación y resolución de prueba acceso restringido por usuario.",
    //link: "https://adventjs.dev",
    image: "/projects/test.webp",
    tags: [TAGS.LARAVEL, TAGS.REACT],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={`proyecto mas reconcidos ${title}`}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
